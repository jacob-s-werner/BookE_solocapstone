@model BookEWebsite.Models.ArtistAddressVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Artist</h4>
<hr />
<div class="container">
    <form asp-action="Edit">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.Artist.AddressId != null)
                {
                    <input type="hidden" asp-for="Address.Id" />
                    <input type="hidden" asp-for="Artist.AddressId" />
                }
                <input type="hidden" asp-for="Artist.Id" />
                <input type="hidden" asp-for="Artist.IdentityUserId" />
                <div class="form-group">
                    <label asp-for="Artist.FirstName" class="control-label"></label>
                    <input asp-for="Artist.FirstName" class="form-control" />
                    <span asp-validation-for="Artist.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Artist.LastName" class="control-label"></label>
                    <input asp-for="Artist.LastName" class="form-control" />
                    <span asp-validation-for="Artist.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Artist.PhoneNumber" class="control-label"></label>
                    <input asp-for="Artist.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Artist.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Artist.EmailAddress" class="control-label"></label>
                    <input asp-for="Artist.EmailAddress" class="form-control" />
                    <span asp-validation-for="Artist.EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Artist.Specialization" class="control-label"></label>
                    <input asp-for="Artist.Specialization" class="form-control" />
                    <span asp-validation-for="Artist.Specialization" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Artist.Description" class="control-label"></label>
                    <input asp-for="Artist.Description" class="form-control" />
                    <span asp-validation-for="Artist.Description" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Artist.LookingForGigs" /> @Html.DisplayNameFor(model => model.Artist.LookingForGigs)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Artist.GroupName" class="control-label"></label>
                    <input asp-for="Artist.GroupName" class="form-control" />
                    <span asp-validation-for="Artist.GroupName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Artist.SizeOfGroup" class="control-label"></label>
                    <input asp-for="Artist.SizeOfGroup" class="form-control" />
                    <span asp-validation-for="Artist.SizeOfGroup" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Artist.HourlyCost" class="control-label"></label>
                    <input asp-for="Artist.HourlyCost" class="form-control" />
                    <span asp-validation-for="Artist.HourlyCost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Artist.WeekendHourlyCost" class="control-label"></label>
                    <input asp-for="Artist.WeekendHourlyCost" class="form-control" />
                    <span asp-validation-for="Artist.WeekendHourlyCost" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Address.Street1" class="control-label"></label>
                    <input asp-for="Address.Street1" class="form-control" />
                    <span asp-validation-for="Address.Street1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.Street2" class="control-label"></label>
                    <input asp-for="Address.Street2" class="form-control" />
                    <span asp-validation-for="Address.Street2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.City" class="control-label"></label>
                    <input asp-for="Address.City" class="form-control" />
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.State" class="control-label"></label>
                    <input asp-for="Address.State" class="form-control" />
                    <span asp-validation-for="Address.State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.ZipCode" class="control-label"></label>
                    <input asp-for="Address.ZipCode" class="form-control" />
                    <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
</form>
</div>

<div>
    <a asp-action="Index">Back to HomePage</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model BookEWebsite.Models.ArtistAvailability

@{
    ViewData["Title"] = "AvailabilityDelete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AvailabilityDelete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ArtistAvailability</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class = "col-sm-10">
            @Model.StartTime.ToShortTimeString()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd class = "col-sm-10">
            @Model.EndTime.ToShortTimeString()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DayOfWeek)
        </dt>
        <dd class = "col-sm-10">
            @Model.DayOfWeek
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Recurring)
        </dt>
        <dd class = "col-sm-10">
            @Model.Recurring
        </dd>
    </dl>
    
    <form asp-action="AvailabilityDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Availability">Back to Availability</a>
    </form>
</div>
